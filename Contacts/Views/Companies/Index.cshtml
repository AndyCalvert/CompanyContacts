@model IEnumerable<Contacts.Models.Company>

@{
   ViewBag.Title = "List of companies";
}

<link rel="stylesheet" type="text/css" href="~/Content/datatables.min.css">
<script type="text/javascript" charset="utf8" src="~/Scripts/datatables.min.js"></script>

<script>
$(document).ready( function () {
    $('#CompanyList').DataTable();
} );
</script>

<h2>List of companies</h2>

<p>
    @Html.ActionLink( "Create New", "Create" )
</p>
<table id="CompanyList" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor( model => model.CompanyName )
            </th>
            <th>
                @Html.DisplayNameFor( model => model.CompanyRef )
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.CompanyName )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.CompanyRef )
            </td>
            <td>
                <a href="@Url.Action("Edit/"+ item.CompanyName, "Companies")" class="btn btn-default btn-sm">
                    Edit
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete/" +item.CompanyName, "Companies")" class="btn btn-danger btn-sm">
                    Delete
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
